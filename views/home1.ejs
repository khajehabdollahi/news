<% layout('layout/boilerplate') %>

<div class="container-fluid px-0 mx-0">
  <div class="row">
    <div class="col-lg-3">
      <h1>ADVERTIZE</h1>
    </div>

    <div class="col-lg-6">
      <% for(let t of allText.reverse()){ %>
        <h4><a href="/text/<%=t.id %>"><%-t.title %></a></h4>
        <p class="text-center text-justify"><%- t.text %></p>

          <% if(t.file !=" ") {%> 
            <img src="<%= t.file %> " alt="hassan" width="100%" style="border-radius: 5px;"/>
            <% } %>
        </div>
       
          Written By:
            <a href="/users/<%=t.author.id %> "><%=t.author.name %> </a>
             <% } %>
      </div>

      <div class="col-lg-3">
        <h1>ADVERTIZE</h1>
      </div>
    </div>
  </div>
</div>
