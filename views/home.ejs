  <div class="row card col -4 d-flex justify-content-center text-center ">
   <% for(let t of allText.reverse()){ %>
    <div class="row d-flex justify-content-center mt-2">
      <div class="col-lg-8 px-3 border rounded blog-text pt-2">
        <h4><a href="/text/<%=t.id %>"><%-t.title %></a></h4>
        <p class="text-center text-justify"><%- t.text %></p>
        <!-- <p class="text-center text-justify"><%- t.file %></p> -->
